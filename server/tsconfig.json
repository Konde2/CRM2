{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"] // Включаем пользовательские типы
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}